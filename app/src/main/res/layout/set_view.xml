<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">




    <com.example.setgame.SetCardsFieldView
        android:layout_width="match_parent"
        android:id="@+id/setview"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:textColor="@color/colorPurple"
            android:fontFamily="monospace"
            android:background="@drawable/contournick"
            android:id="@+id/points"
            android:textSize="20sp"
            android:padding="10sp"
            android:textAlignment="center"
            android:text="points"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_set"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/button2"
            android:textColor="@color/colorYellow"
            android:onClick="onSentClick"
            android:text="Отправить set"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:textColor="@color/colorYellow"
            android:id="@+id/hint"
            android:onClick="onHintClick"
            android:text="Подсказка"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>
